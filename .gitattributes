# ==============================
# UNITY SMART MERGE (YAML)
# ==============================

# Các file YAML mà Unity có thể merge tự động
*.unity     merge=unityyamlmerge eol=lf
*.prefab    merge=unityyamlmerge eol=lf
*.asset     merge=unityyamlmerge eol=lf
*.mat       merge=unityyamlmerge eol=lf
*.anim      merge=unityyamlmerge eol=lf
*.controller merge=unityyamlmerge eol=lf

# ==============================
# CÁC FILE KHÁC
# ==============================

# Không merge binary (ảnh, âm thanh, model)
*.png       merge=ours
*.jpg       merge=ours
*.jpeg      merge=ours
*.tga       merge=ours
*.psd       merge=ours
*.fbx       merge=ours
*.wav       merge=ours
*.mp3       merge=ours
*.ogg       merge=ours

# Giữ nguyên các file cấu hình cá nhân
ProjectSettings/* merge=ours
UserSettings/* merge=ours

# ==============================
# Xử lý line endings (ngắt dòng)
# ==============================
* text=auto
